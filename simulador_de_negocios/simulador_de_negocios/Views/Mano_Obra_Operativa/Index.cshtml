@model IEnumerable<simulador_de_negocios.Models.Mano_Obra_Operativa>

@{
    ViewData["Title"] = "Index";
}

<h2>Mano de obra</h2>

<p>
    <a asp-action="Create">crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.concepto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.unidadmedia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.preciounitario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estimacionmensual)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estimacionanual)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.servicioproducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.datosempresas)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.concepto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidadmedia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preciounitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estimacionmensual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estimacionanual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servicioproducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datosempresas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.manoobraoperativaID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.manoobraoperativaID">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.manoobraoperativaID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
